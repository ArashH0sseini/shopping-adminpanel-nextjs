{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "app/components/layouts/main/runningProjects/RunningProjectsList.jsx", "app/components/layouts/main/BandwidthSavedMonthList.jsx", "app/services/darkmode.js", "app/components/layouts/drawer/DashboardDropDown.jsx", "app/services/i18n.js", "app/components/layouts/navbar/AccountMenu.jsx"],
  "exclude": ["node_modules"]
}
